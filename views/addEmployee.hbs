<h2>Add Employee Form</h2>

<form action="/addEmployee" method="post">
    <label for="firstName">First Name:</label><br>
    <input class="input" type="text" id="firstName" name="firstName" autocomplete="given-name"><br>

    <label for="lastName">Last Name:</label><br>
    <input class="input" type="text" id="lastName" name="lastName" autocomplete="family-name"><br>

    <label for="email">Email:</label><br>
    <input class="input" type="email" id="email" name="email" autocomplete="email"><br>

    <label for="password">Password:</label><br>
    <input class="input" type="password" id="password" name="password" autocomplete="new-password"><br>

    <label for="employeeID">Employee ID:</label><br>
    <input class="input" type="text" id="employeeID" name="employeeID"><br>

    <label for="status">Status:</label><br>

    <div class="select is-fullwidth">
        <select id="status" name="status">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
            <option value="Suspended">Suspended</option>
        </select>
    </div><br>

    <label for="department">Department:</label><br>

    <div class="select is-fullwidth">
        <select id="department" name="department">

<h2>Add Employee Form</h2>

<form action="/addEmployee" method="post">
	<label for="firstName">First Name:</label><br>
	<input class="input" type="text" id="firstName" name="firstName" autocomplete="given-name"><br>

	<label for="lastName">Last Name:</label><br>
	<input class="input" type="text" id="lastName" name="lastName" autocomplete="family-name"><br>

	<label for="email">Email:</label><br>
	<input class="input" type="email" id="email" name="email" autocomplete="email"><br>

	<label for="password">Password:</label><br>
	<input class="input" type="password" id="password" name="password" autocomplete="new-password"><br>

	<label for="employeeID">Employee ID:</label><br>
	<input class="input" readonly maxlength="10" minlength="10" pattern="[A-Z]{2}@[0-9]{7}" type="text" id="employeeID" name="employeeID"><br>

	<label for="status">Status:</label><br>

	<div class="select is-fullwidth">
		<select id="status" name="status">
			<option value="Active">Active</option>
			<option value="Inactive">Inactive</option>
			<option value="Suspended">Suspended</option>
		</select>
	</div>
	<br>

	<label for="department">Department:</label><br>

	<div class="select is-fullwidth">
		<select id="department" name="department">
			<option value="Human Resources">Human Resources</option>
			<option value="IT Department">IT Department</option>
			<option value="Accounting">Accounting</option>
		</select>
	</div>
	<br>

	<label for="manager">Manager:</label><br>
	<div class="control select is-fullwidth">
		<select id="manager" name="manager">
			{{#each managers as |manager|}}
				<option value="{{manager.employeeID}}"
				        {{#if (eq manager employee.employeeID)}}selected{{/if}}>{{manager.firstName}} {{manager.lastName}}
					- {{manager.employeeID}}</option>
			{{/each}}
		</select>
	</div>
	<br>

	<label>Are they a manager?<br>
		<label class="radio">Yes
			<input class="radio" type="radio" name="permissions" value="Yes">
		</label>
		<label class="radio">No
			<input class="radio" type="radio" name="permissions" value="No" checked>
		</label>
	</label>
	<br>

	<input class="button is-primary" type="submit" value="Submit">
</form>

<script src="javascript/employeeIdGenerator.js" type="text/javascript"></script>

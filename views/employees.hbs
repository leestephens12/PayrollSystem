<h2>Employee Table</h2>
<button><a href="/addEmployee">Add Employee</a></button>
<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each employees}}
            <tr>
                <td>{{this.employeeID}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.department}}</td>
                <td>{{this.status}}</td>
                <td>
                    <a class="button is-primary" href="/updateEmployee/?empID={{this.employeeID}}">Manage</a>
                    <a class="button is-danger" href="/removeEmployee/?empID={{this.employeeID}}">Remove</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
<h1>Create Expense</h1>
<form action="/expense" method="post">
	<div class="container">
		<label for="from"><b>Employee ID:</b></label>
		<input type="text" placeholder="Enter Employee ID" name="from" value="{{currentEmp.employeeID}}"><br>
		<ul>
			<h4>Type:</h4>
			<li>
				<label for="Mileage">Mileage</label>
				<input type="radio" value="Mileage" name="type">
			</li>
			<li>
				<label for="Supplies">Supplies</label>
				<input type="radio" value="Supplies" name="type">
			</li>
			<li>
				<label for="Meal">Meal</label>
				<input type="radio" value="Meal" name="type">
			</li>
		</ul>

		<label for="amount"><b>Amount:</b></label>
		<input type="text" placeholder="Enter Amount" name="amount">

		{{!-- <li>
			<label for="proof"><b>Proof:</b></label>
			<input type="file" id="myFile" name="proof">
		</li> --}}

	</div>
	<button type="submit">Submit</button>
</form>
<table>
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Type</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
    {{#each expense}}
        <tr>
            <td>{{this.from}}</td>
            <td>{{this.type}}</td>
            <td>{{this.amount}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>

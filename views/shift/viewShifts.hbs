<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.js"></script>
<div id="calendar"></div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const calendarEl = document.getElementById("calendar");
        const calendar = new FullCalendar.Calendar(calendarEl, {{{ json calendarOptions }}});
    function requestOff(info) {
        if (confirm("Would you like to request off for your shift on " + info.event.start.toLocaleDateString() + "?"))
            window.location.href = `/shifts/requestOff/${info.event.id}`;
    }
    calendar.on('eventClick', requestOff);
    calendar.render();
    });
</script>
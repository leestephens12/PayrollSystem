<h2>Add Employee Form</h2>

<form action="/updateEmployee" method="post">
    <label for="firstName">First Name:</label><br>
    <input type="text" id="firstName" name="firstName" value="{{employee.firstName}}"><br>

    <label for="lastName">Last Name:</label><br>
    <input type="text" id="lastName" name="lastName" value="{{employee.lastName}}"><br>

    <label for="email">Email:</label><br>
    <input type="email" id="email" name="email" value="{{employee.email}}"><br>

    <label for="password">Password:</label><br>
    <input type="password" id="password" name="password" value="{{employee.password}}"><br>

    <label for="employeeID">Employee ID:</label><br>
    <input type="text" id="employeeID" name="employeeID" value="{{employee.employeeID}}" readonly><br>

    <label for="status">Status:</label><br>
    <input type="text" id="status" name="status" value="{{employee.status}}"><br>

    <label for="department">Department:</label><br>
    <input type="text" id="department" name="department" value="{{employee.department}}"><br>

    <label for="manager">Manager:</label><br>
    <input type="text" id="manager" name="manager" value="{{employee.manager}}"><br>

    <label for="permissions">Permissions:</label><br>
    <input type="text" id="permissions" name="permissions" value="{{employee.permissions}}"><br>

    <label for="shifts">Shifts: </label><br>
    <input type="text" id="shifts" name="shifts" value="{{employee.shifts}}"><br>

    <input type="submit" value="Submit">
</form>
